{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pabbly Order Payload",
  "type": "object",
  "required": ["airtable_record_id","order_number","customer","cart","finance","dropbox_folder_url"],
  "properties": {
    "airtable_record_id": { "type": ["string","null"] },
    "order_number": { "type": ["string","null"] },
    "customer": {
      "type": "object",
      "required": ["contact_name"],
      "properties": {
        "contact_name": { "type": "string" },
        "email": { "type": "string" },
        "phone": { "type": "string" },
        "address": {
          "type": "object",
          "properties": {
            "line1": { "type": "string" },
            "line2": { "type": "string" },
            "city": { "type": "string" },
            "postcode": { "type": "string" },
            "country": { "type": "string" }
          }
        }
      }
    },
    "cart": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["line_id","sku","quantity"],
        "properties": {
          "line_id": { "type": "string" },
          "product_name": { "type": "string" },
          "sku": { "type": "string" },
          "quantity": { "type": "number" },
          "unit_price": { "type": "number" },
          "line_total": { "type": "number" },
          "colors": { "type": "array" },
          "print_areas": { "type": "array" }
        }
      }
    },
    "finance": {
      "type": "object",
      "required": ["grand_total"],
      "properties": {
        "paid": { "type": "boolean" },
        "payment_method": { "type": "string" },
        "subtotal": { "type": "number" },
        "prints_embossing_cost": { "type": "number" },
        "delivery_cost": { "type": "number" },
        "vat_percent": { "type": "number" },
        "vat_amount": { "type": "number" },
        "grand_total": { "type": "number" }
      }
    },
    "dropbox_folder_url": { "type": ["string","null"] }
  }
}
